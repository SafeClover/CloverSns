<?xml version="1.0" encoding="ISO-8859-1"?>

<web-app xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
                      http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
	version="3.0" metadata-complete="true">

	<display-name>Welcome to Tomcat</display-name>
	<description>
   	  Welcome to Tomcat
  	</description>


	<servlet>
		<servlet-name>member</servlet-name>
		<servlet-class>login_reg.MemberController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>member</servlet-name>
		<url-pattern>/member.action</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>notice</servlet-name>
		<servlet-class>board.mvc.notice.NoticeController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>notice</servlet-name>
		<url-pattern>*.notice</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>question</servlet-name>
		<servlet-class>board.mvc.question.QuestionController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>question</servlet-name>
		<url-pattern>*.question</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>friend</servlet-name>
		<servlet-class>friend.FriendController</servlet-class>
	</servlet>

	<servlet-mapping>
		<servlet-name>friend</servlet-name>
		<url-pattern>/friend.action</url-pattern>
	</servlet-mapping>
	
	
	<servlet>
		<servlet-name>index</servlet-name>
		<servlet-class>index.mvc.IndexController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>index</servlet-name>
		<url-pattern>*.index</url-pattern>
	</servlet-mapping>


	<servlet>
		<servlet-name>xml</servlet-name>
		<servlet-class>ourclover.XMLController</servlet-class>
	</servlet>
	
	<servlet-mapping>
		<servlet-name>xml</servlet-name>
		<url-pattern>/xml.action</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>find</servlet-name>
		<servlet-class>find.mvc.FindController</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>find</servlet-name>
		<url-pattern>*.find</url-pattern>
	</servlet-mapping>
</web-app>